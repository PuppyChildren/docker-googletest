FROM alpine:latest

LABEL maintainer "srz_zumix <https://github.com/srz-zumix>"

ARG BRANCH_OR_TAG=release-1.3.0
ARG GMOCK_BRANCH_OR_TAG=release-1.1.0
RUN env \
  && apk update && apk upgrade \
  && apk add --no-cache -q -f git cmake make g++ lcov \
  && apk add --no-cache -q -f --virtual .builddeps automake autoconf libtool python

RUN g++ --version
RUN git clone --depth=1 -b $BRANCH_OR_TAG -q https://github.com/google/googletest.git /gtest
WORKDIR /gtest
RUN autoreconf -fvi \
  && ./configure CXXFLAGS='-std=c++03' \
  && make \
  && make install

RUN git clone --depth=1 -b $GMOCK_BRANCH_OR_TAG -q https://github.com/google/googlemock.git /googlemock \
  && mv /gtest /googlemock/gtest
WORKDIR /googlemock
RUN autoreconf -fvi \
  && ./configure \
  && make \
  && make install \
  && apk del .builddeps
RUN mkdir -p /code
WORKDIR /code
RUN rm -rf /googlemock
